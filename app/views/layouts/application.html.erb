<!DOCTYPE html>
<html>
<head>
  <title>Ticketmaster</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="user_nav">
    <%if user_signed_in? %>
      Signed in as <%= current_user.email %>
      <%= link_to "Sign Out", destroy_user_session_path %>
      <%else%>
      <%=link_to "Sign Up", new_user_registration_path%> pr <%=link_to "Sign In", new_user_session_path%>
      <%end%>
  </div>

  <%= yield %>

</body>
</html>
